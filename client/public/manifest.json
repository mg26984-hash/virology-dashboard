{
  "name": "Virology Dashboard",
  "short_name": "Virology",
  "description": "OTC Virology Communication Dashboard - Upload and process lab reports",
  "start_url": "/upload",
  "display": "standalone",
  "background_color": "#0a0a0a",
  "theme_color": "#10b981",
  "icons": [
    {
      "src": "/icon-192.png",
      "sizes": "192x192",
      "type": "image/png"
    },
    {
      "src": "/icon-512.png",
      "sizes": "512x512",
      "type": "image/png"
    }
  ],
  "share_target": {
    "action": "/share-target",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "files": [
        {
          "name": "images",
          "accept": [
            "image/jpeg",
            "image/png",
            "image/webp",
            "application/pdf"
          ]
        }
      ]
    }
  }
}
